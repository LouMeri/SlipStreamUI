<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>SlipStreamUI</artifactId>
	<version>2.2.6-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>SlipStreamUI</name>
	<description>SlipStream UI</description>
	<url>http://sixsq.com</url>
	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0</url>
		</license>
	</licenses>
	<parent>
		<groupId>com.sixsq.slipstream</groupId>
		<artifactId>SlipStream</artifactId>
		<version>2.2.6-SNAPSHOT</version>
		<relativePath>../SlipStream</relativePath>
	</parent>
	<scm>
		<connection>scm:git:git://github.com/slipstream/SlipStreamUI.git
		</connection>
		<developerConnection>scm:git:ssh://git@github.com/slipstream/SlipStreamUI.git
		</developerConnection>
		<url>https://github.com/slipstream/SlipStreamUI</url>
		<tag>HEAD</tag>
	</scm>
	<build>
		<resources>
			<resource>
				<directory>clj/src</directory>
			</resource>
			<resource>
				<directory>clj/test</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>com.theoryinpractise</groupId>
				<artifactId>clojure-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
					<execution>
						<id>test</id>
						<phase>test</phase>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<sourceDirectories>
						<sourceDirectory>clj/src</sourceDirectory>
					</sourceDirectories>
					<testSourceDirectories>
						<testSourceDirectory>clj/test</testSourceDirectory>
					</testSourceDirectories>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>cljs-clean</id>
						<goals>
							<goal>exec</goal>
						</goals>
						<phase>clean</phase>
						<configuration>
							<executable>lein</executable>
							<arguments>
								<argument>cljsbuild</argument>
								<argument>clean</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>cljs-build</id>
						<goals>
							<goal>exec</goal>
						</goals>
						<phase>compile</phase>
						<configuration>
							<executable>lein</executable>
							<arguments>
								<argument>do</argument>
								<argument>deps</argument>
								<argument>,</argument>
								<argument>cljsbuild</argument>
								<argument>once</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
		      </plugin>
  		</plugins>
		<directory>clj/target</directory>
		<outputDirectory>clj/target/classes</outputDirectory>
	</build>
	<repositories>
		<repository>
			<id>central</id>
			<url>http://repo1.maven.org/maven2</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>clojars</id>
			<url>https://clojars.org/repo/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>org.clojure</groupId>
			<artifactId>clojure</artifactId>
		</dependency>
		<dependency>
			<groupId>enlive</groupId>
			<artifactId>enlive</artifactId>
		</dependency>
		<dependency>
			<groupId>expectations</groupId>
			<artifactId>expectations</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>jline</groupId>
			<artifactId>jline</artifactId>
		</dependency>
		<dependency>
			<groupId>ring</groupId>
			<artifactId>ring</artifactId>
		</dependency>
		<dependency>
			<groupId>net.cgrand</groupId>
			<artifactId>moustache</artifactId>
		</dependency>
	</dependencies>
</project>
